{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
      "ignore": [
        "node_modules",
        "**/dist",
        "build",
        ".next",
        ".vercel",
        "coverage",
        "*.min.js",
        "*.config.js",
        "public"
      ],
      "maxSize": 1048576
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "lineEnding": "lf",
      "ignore": [],
      "bracketSpacing": true,
      "attributePosition": "multiline"
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "jsxQuoteStyle": "double",
        "quoteProperties": "asNeeded",
        "trailingCommas": "all",
        "semicolons": "asNeeded",
        "arrowParentheses": "asNeeded",
        "bracketSpacing": true,
        "bracketSameLine": false
      },
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      }
    },
    "json": {
      "parser": {
        "allowComments": true,
        "allowTrailingCommas": true
      },
      "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentWidth": 2
      }
    },
    "organizeImports": {
      "enabled": true
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    },
    "css": {
      "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentWidth": 2
      }
    },
    "linter": {
      "enabled": false
    }
  }
  